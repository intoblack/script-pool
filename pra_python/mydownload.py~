import urllib
import threading
import os

class DownTask(threading.Thread):
    
    def __init__(self , url , filename):
        Thread.__init__(self)
        self.url = url
        self.filename = filename

    def run():
        urldata = urllib.open(self.url)
        fp = open(self.filename,"wb")
        fp.write(urldata.read())


if __name__ == "__main__":

   dw = DownTask("http://www\.cnblogs\.com/tqsummer/archive/2011/01/25/1944771\.html","/home/lixuze/ss")
   dw.start()
   dw.join()
